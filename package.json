{
  "name": "@nartc/automapper",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Chau Tran",
  "repository": {
    "type": "git",
    "url": "https://github.com/nartc/mapper.git"
  },
  "main": "dist/index.js",
  "module": "dist/automapper.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --tsconfig ./tsconfig.build.json",
    "build:docs": "typedoc --out gh-docs --target es6 --theme minimal --mode file src",
    "build:docusaurus": "cd automapper-docusaurus && npm install",
    "test": "CI=true tsdx test --no-cache",
    "test:cov": "tsdx test --coverage",
    "lint": "lint-staged && tsdx lint src",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "deploy-docs": "ts-node tools/gh-pages",
    "deploy-docusaurus": "ts-node tools/netlify-docs",
    "report-coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --fix --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFiles": [
      "./jest-setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "@types/jest": "26.0.6",
    "@types/lodash.set": "4.3.6",
    "commitizen": "4.1.2",
    "coveralls": "3.1.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "moment": "2.27.0",
    "prettier": "2.0.5",
    "reflect-metadata": "0.1.13",
    "semantic-release": "17.1.1",
    "shelljs": "0.8.4",
    "ts-node": "8.10.2",
    "tsdx": "0.13.2",
    "tslib": "2.0.0",
    "typedoc": "0.17.8",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "lodash.set": "4.3.2"
  }
}
