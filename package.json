{
  "name": "@nartc/automapper",
  "version": "1.1.2",
  "license": "MIT",
  "author": "Chau Tran",
  "repository": {
    "type": "git",
    "url": "https://github.com/nartc/mapper.git"
  },
  "main": "dist/index.js",
  "module": "dist/automapper.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "test": "CI=true tsdx test --no-cache",
    "test:cov": "tsdx test --coverage",
    "lint": "tsdx lint src && lint-staged",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "deploy-docs": "ts-node tools/gh-pages",
    "report-coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && git add . && npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{src}/**/*.ts": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "src/automapper.{js,ts}"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/jest": "25.1.1",
    "@types/lodash.set": "4.3.6",
    "commitizen": "4.0.3",
    "coveralls": "3.0.9",
    "cz-conventional-changelog": "3.1.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.1",
    "lint-staged": "10.0.4",
    "moment": "2.24.0",
    "prettier": "1.19.1",
    "reflect-metadata": "0.1.13",
    "semantic-release": "17.0.1",
    "shelljs": "0.8.3",
    "ts-node": "8.6.2",
    "tsdx": "0.12.2",
    "tslib": "1.10.0",
    "typedoc": "0.16.9",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "class-transformer": "0.2.3",
    "lodash.set": "4.3.2"
  }
}
